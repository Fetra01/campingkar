{% extends "base.html.twig" %}

{% block title %}
    {{ ad.type }}
{% endblock %}

{% block body %}

<div class="titleAd" style="background-image: url({{ ad.coverImage }})">
    <div class="container">
        <h1>{{ ad.type }}</h1>
        <p>{{ ad.introduction }}</p>
        <p class="h2">
            <strong>{{ ad.places }} places </strong> et <strong> {{ ad.bedding }} de couchages </strong> pour <br> <strong>{{ ad.price }}&euro;</strong> par jours 
        </p>
        <a href="#" class="btn btn-primary">RÃ©server !</a>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-8 mb-3">
            {{ ad.content | raw }}
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                <ol class="carousel-indicators">
                    {% for imge in ad.images %}
                        <li data-target="#carouselExampleIndicators" data-slide-to="{{loop.index0}}" {% if loop.first %}class="active" {% endif %}></li>
                    {% endfor %}
                </ol>
                <div class="carousel-inner">
                    {% for image in ad.images %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <img src="{{ image.url }}" class="d-block w-100" alt="First-slide">
                            <div class="carousel-caption d-none d-md-block">
                                <h5>{{ ad.type }}</h5>
                                <p>{{ image.caption }}</p>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>        
    

        <div class="col">
            <div class="row mb-3 align-items-center">
                <div class="col-4">
                    <img src="http://placehold.it/64x64" alt="Avatar de Jof">
                </div>
                <div class="col">
                    <h3>Jof Perrez</h3>
                    <span class="bbadge badge-primary">3 Annonces</span>
                </div>
            </div>
            <p>Lorem, ipsum dolor sit amet consectetur adipisicing elit. Voluptatem, natus.</p>
            <p>Ipsa sit maiores aut doloribus, quia eius itaque maxime incidunt!</p>
            <p>Minus aperiam alias dicta ab, ipsum expedita voluptatum veniam harum?</p>
        </div>
    </div>    
</div>
{% endblock %}